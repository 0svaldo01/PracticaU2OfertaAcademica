@{
	Layout = "_Layout";
}
@model PracticaU2OfertaAcademica.Models.ViewModels.MapaCurricularViewModel

<main>
	<h1>
		<a class="btn" href="javascript: history.back()">&#x25c0; Regresar</a>

		@Model.Carreras.Nombre
	</h1>
	<h2>@Model.Carreras.Plan</h2>
	<h2>
		Total de creditos: @Model.TotalCreditos
	</h2>
	<section class="reticula">
		<table>
			<thead>
				<tr>
					<th>1 semestre</th>
					<th>2 semestre</th>
					<th>3 semestre</th>
					<th>4 semestre</th>
					<th>5 semestre</th>
					<th>6 semestre</th>
					<th>7 semestre</th>
					<th>8 semestre</th>
					<th>9 semestre</th>
				</tr>
				@for (int i = 1; i <= Model.Carreras.Materias.Max(x => x.Semestre); i++)
				{
				<td>
						@foreach (var mat in Model.Carreras.Materias.Where(x => x.Semestre == i))
						{
						<div class="materia">
							<span class="clave">@mat.Clave</span>
							<span class="nombre">@mat.Nombre</span>
							<span class="tpc">@mat.HorasTeoricas - @mat.HorasPracticas - @mat.Creditos</span>
						</div>
						}
























				</td>
				}
			</tr>
		</table>
	</section>
</main>